{
    "parserOptions": {
        "ecmaVersion": 2020,        //버전 2020
        "sourceType": "module",     //import, export 같은 모듈 시스템 사용
        "ecmaFeatures": {
            "jsx": true             //jsx 사용
        }
    },
    "env": {                        //환경 설정
        "browser": true,            //브라우저에서 돌아감
        "node": true,               //노드에서 돌아감
        "es6": true                 //es6(최신 문법) 적용
    },
    "extends": [
        "eslint: recommended",      //기본적인 규칙을 따름. 근데 너그러워서 거의 잡는 게 없음.
        "plugin:react/recommended"
    ],
    "plugins": [
        "import",
        "react-hooks"
    ],
    "rules": {
        
    }
}